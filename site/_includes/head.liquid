<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="view-transition" content="same-origin">
{% assign meta_title = site.title %}
{% if page.title %}
  {% assign meta_title = page.title | append: " — " | append: site.title %}
{% endif %}
{% assign meta_description = site.description %}
{% if page.description %}
  {% assign meta_description = page.description %}
{% endif %}
{% assign card_meta = "" %}
{% if page.camera %}
  {% assign card_meta = page.camera %}
{% endif %}
{% assign film_meta = "" %}
{% if page.film_name %}
  {% assign film_meta = page.film_name %}
  {% if page.film_speed %}
    {% assign film_meta = film_meta | append: " " | append: page.film_speed %}
  {% endif %}
  {% if page.film_type %}
    {% assign film_meta = film_meta | append: " " | append: page.film_type %}
  {% endif %}
{% endif %}
{% if film_meta != "" %}
  {% if card_meta != "" %}
    {% assign card_meta = card_meta | append: " · " %}
  {% endif %}
  {% assign card_meta = card_meta | append: film_meta %}
{% endif %}
{% if page.location %}
  {% if card_meta != "" %}
    {% assign card_meta = card_meta | append: " · " %}
  {% endif %}
  {% assign card_meta = card_meta | append: page.location %}
{% endif %}
{% assign card_description = meta_description %}
{% if card_meta != "" %}
  {% if card_description != "" %}
    {% assign card_description = card_description | append: " — " | append: card_meta %}
  {% else %}
    {% assign card_description = card_meta %}
  {% endif %}
{% endif %}
{% assign image_alt = "" %}
{% if page.title %}
  {% assign image_alt = page.title %}
{% endif %}
{% if page.location %}
  {% if image_alt != "" %}
    {% assign image_alt = image_alt | append: " — " %}
  {% endif %}
  {% assign image_alt = image_alt | append: page.location %}
{% endif %}
{% if page.camera %}
  {% if image_alt != "" %}
    {% assign image_alt = image_alt | append: " — shot on " %}
  {% else %}
    {% assign image_alt = "Shot on " %}
  {% endif %}
  {% assign image_alt = image_alt | append: page.camera %}
{% endif %}
{% if film_meta != "" %}
  {% if image_alt != "" %}
    {% assign image_alt = image_alt | append: " — " %}
  {% endif %}
  {% assign image_alt = image_alt | append: film_meta %}
{% endif %}
{% assign canonical_url = site.url | append: page.url %}
{% assign meta_image = "" %}
{% if page.thumb %}
  {% assign meta_image = page.thumb %}
{% elsif page.image %}
  {% assign meta_image = page.image %}
{% elsif site.image %}
  {% assign meta_image = site.image %}
{% endif %}
{% unless meta_image == "" or meta_image contains "http" %}
  {% assign first_char = meta_image | slice: 0, 1 %}
  {% if first_char == "/" %}
    {% assign meta_image = site.url | append: meta_image %}
  {% else %}
    {% assign meta_image = site.url | append: "/" | append: meta_image %}
  {% endif %}
{% endunless %}

<title>{{ meta_title | downcase }}</title>
<meta name="description" content="{{ meta_description }}">
<link rel="canonical" href="{{ canonical_url }}">
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ meta_title }}">
<meta property="og:description" content="{{ card_description }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:type" content="{% if page.layout == "photo" %}article{% else %}website{% endif %}">
<meta property="og:locale" content="en_GB">
{% if page.date %}
<meta property="article:published_time" content="{{ page.date | date: "%Y-%m-%dT%H:%M:%S%z" }}">
{% endif %}
{% if meta_image != "" %}
<meta property="og:image" content="{{ meta_image }}">
{% if image_alt != "" %}
<meta property="og:image:alt" content="{{ image_alt }}">
{% endif %}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:image" content="{{ meta_image }}">
{% if image_alt != "" %}
<meta name="twitter:image:alt" content="{{ image_alt }}">
{% endif %}
{% else %}
<meta name="twitter:card" content="summary">
{% endif %}
<meta name="twitter:title" content="{{ meta_title }}">
<meta name="twitter:description" content="{{ card_description }}">
<link rel="icon" type="image/svg+xml" href="{{ site.baseurl }}public/favicon.svg">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="{{ site.baseurl }}css/main.css">
{% if site.analytics %}<script data-goatcounter="https://photosbymatt.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>{% endif %}

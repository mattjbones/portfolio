<div class="photo-card{% if tags contains "hero" %} photo-card--hero{% endif %}">
  <a href="{{ post.url }}">
    <img src="{{ post.thumb }}" alt="{{ post.title }}" loading="lazy">
    <div class="photo-card-overlay">
      <div class="photo-card-title">{{ post.title }}</div>
      <div class="photo-card-meta">{{ post.film }} â€” {{ post.location }}</div>
    </div>
  </a>
</div>

---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}</loc>
  </url>
  {% for page in site.pages %}
    {% assign skip_page = false %}
    {% if page.url == "/" %}{% assign skip_page = true %}{% endif %}
    {% if page.url == "/sitemap/" or page.url == "/sitemap.xml" %}{% assign skip_page = true %}{% endif %}
    {% if page.url == "/robots/" or page.url == "/robots.txt" %}{% assign skip_page = true %}{% endif %}
    {% if page.url == "/404.html" %}{% assign skip_page = true %}{% endif %}
    {% if page.url contains "[" %}{% assign skip_page = true %}{% endif %}
    {% unless skip_page %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
  </url>
    {% endunless %}
  {% endfor %}
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    <lastmod>{{ post.date | date: "%Y-%m-%d" }}</lastmod>
  </url>
  {% endfor %}
  {% assign tags_blob = "||" %}
  {% for post in site.posts %}
    {% assign post_tags = post.tags | default: "" | split: " " %}
    {% for tag in post_tags %}
      {% assign clean_tag = tag | strip %}
      {% if clean_tag != "" %}
        {% assign tag_token = "||" | append: clean_tag | append: "||" %}
        {% unless tags_blob contains tag_token %}
          {% assign tags_blob = tags_blob | append: clean_tag | append: "||" %}
        {% endunless %}
      {% endif %}
    {% endfor %}
  {% endfor %}
  {% assign tags = tags_blob | split: "||" %}
  {% for tag in tags %}
    {% if tag != "" %}
  <url>
    <loc>{{ site.url }}{{ site.baseurl }}tags/{{ tag }}/</loc>
  </url>
    {% endif %}
  {% endfor %}
</urlset>
